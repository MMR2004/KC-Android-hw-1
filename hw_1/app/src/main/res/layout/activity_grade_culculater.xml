<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/math3"
    tools:context=".grade_culculater">

    <TextView
        android:id="@+id/gradetext"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Grade Calculater"
        android:background="#BEFFFFFF"
        android:textColor="#689F38"
        android:textAlignment="center"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/editTextTextQuizes"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:background="#BEFFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#689F38"
            android:textSize="25sp"
            android:textColorHint="#689F38"
            android:hint="Quizes 0~15" />

        <EditText
            android:id="@+id/editTextTextHomeWork"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:background="#BEFFFFFF"
            android:ems="10"
            android:hint="HomeWork 0~25"
            android:inputType="textPersonName"
            android:textColor="#689F38"
            android:textSize="22dp"
            android:textColorHint="#689F38" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editTextTextMidTerms"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:background="#BEFFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#689F38"
            android:textSize="22dp"
            android:textColorHint="#689F38"
            android:hint="Mid Terms  0~30" />

        <EditText
            android:id="@+id/editTextTextFinal"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:background="#BEFFFFFF"
            android:ems="10"
            android:hint="Final 0~30"
            android:inputType="textPersonName"
            android:textColor="#689F38"
            android:textSize="25dp"
            android:textColorHint="#689F38" />
    </LinearLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:backgroundTint="#139319"
        android:text="Calculate" />

    <TextView
        android:id="@+id/result"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="result"
        android:background="#BEFFFFFF"
        android:textColor="#689F38"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#139319"
        android:text="Reset" />

    <Button
        android:id="@+id/Homehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#139319"
        android:text="Home" />
</LinearLayout>